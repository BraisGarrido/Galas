<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dark_gray"
    tools:context=".PreguntasActivity">

    <TextView
        android:id="@+id/num_pregunta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pregunta 1"
        style="@style/titulo_principal"/>

    <TextView
        android:id="@+id/enunciado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/titulo_secundario"
        android:text="¿Cual fue la primera película de animación en ganar un Oscar?"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/respuesta1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Atlantis: El imperio perdido"
            style="@style/recycler_resultados"/>

        <RadioButton
            android:id="@+id/respuesta2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shrek"
            style="@style/recycler_resultados"/>

        <RadioButton
            android:id="@+id/respuesta3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="El viaje de Chihiro"
            style="@style/recycler_resultados"/>
    </RadioGroup>

    <Button
        android:id="@+id/siguiente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boton_redondo"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:text="Siguiente"/>

    <Button
        android:id="@+id/reiniciar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/boton_redondo"
        android:textColor="@color/white"
        android:text="Volver a intentar"/>

    <Button
        android:id="@+id/salir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/boton_redondo"
        android:textColor="@color/white"
        android:text="Salir"/>

</LinearLayout>