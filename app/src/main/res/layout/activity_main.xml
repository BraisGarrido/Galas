<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/nueva_gala"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Crear una gala nueva"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/listar_gala"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Ver las galas"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/actual_gala"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Nominaciones gala actual"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/juego_preguntas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Juego de preguntas"
        android:layout_weight="1"/>
</LinearLayout>